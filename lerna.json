{
  "version": "1.0.1",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "message": "chore(publish): bump versions and publish",
      "ignoreChanges": [
        "**/__snapshots__/**",
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.fixtures.*",
        "**/*.test.*",
        "**/*.md",
        "**/jest.config.js",
        "**/.eslintrc",
        "**/.prettierrc",
        "**/prettier.config.js"
      ]
    }
  }
}
